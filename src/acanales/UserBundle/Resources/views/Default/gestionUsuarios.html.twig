{% extends '::base.html.twig' %}

{% block main %}
<h2 class="text-center">Gesti√≥n usuarios</h2>
	<table class="table">
	<tr>
		<th>ID</th>
		<th>USERNAME</th>
		<th>ROLES</th>	
		<th></th>
		<th></th>			
	</tr>
	{% for usuario in usuarios %}
		<tr>
		   <td>{{usuario.id}}</td>
		   <td>{{usuario.username}}</td>
		   <td>
		   {% if usuario.getRoles() !='ROLE_USER ' %}
		   		{{usuario.roles[0]}}
			{% endif %}
			</td>
			<td>
				<a href="{{path('acanales_user_editarUsuario',{ 'id': usuario.id })}}">
				<button type="button" class="btn btn-default btn-lg">
				  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
				</button>
				</a>
			</td>
			<td>
				<a href="{{path('acanales_user_eliminarUsuario',{ 'id': usuario.id })}}">
				<button style="color:#f00;" type="button" class="btn btn-default btn-lg">
				  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Eliminar
				</button>
				</a>
			</td>
		</tr>
	{% endfor %}
	</table>
	
	
{% endblock %}

